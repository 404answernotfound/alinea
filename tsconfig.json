{
  "compilerOptions": {
    "module": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "paths": {
      "@alinea/*": ["./packages/*/src"],
      "@alinea/core/*": ["./packages/core/src/*"]
    }
  },
  "include": ["packages"]
}
