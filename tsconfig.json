{
  "compilerOptions": {
    "module": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "paths": {
      "@alinea/*": ["./packages/*/src"],
      "@alinea/core/*": ["./packages/core/src/*"],
      "@alinea/editor/*": ["./packages/editor/src/*"],
      "@alinea/ui/*": ["./packages/ui/src/*"],
      "@alinea/input.*": ["./packages/input/*/src"]
    },
    "plugins": [{"name": "typescript-plugin-css-modules"}]
  },
  "include": ["packages"]
}
