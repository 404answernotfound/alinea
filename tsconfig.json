{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "preserveWatchOutput": true,
    "outDir": ".types",
    "incremental": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "paths": {
      "@alineacms/input.*/view": ["./packages/input/*/src/view.ts"],
      "@alineacms/input.*": ["./packages/input/*/src/index.ts"],
      "@alineacms/auth.*": ["./packages/input/*/src"],
      "@alineacms/auth.passwordless/*": ["./packages/auth/passwordless/src/*"],
      "@alineacms/core/*": ["./packages/core/src/*"],
      "@alineacms/dashboard/*": ["./packages/dashboard/src/*"],
      "@alineacms/backend/*": ["./packages/server/src/*"],
      "@alineacms/store/*": ["./packages/store/src/*"],
      "@alineacms/editor/*": ["./packages/editor/src/*"],
      "@alineacms/ui": ["./packages/ui/src"],
      "@alineacms/ui/*": ["./packages/ui/src/*"],
      "@alineacms/*": ["./packages/*/src"],
      ".alinea/*": ["./packages/website/.alinea/*"]
    },
    "plugins": [{"name": "typescript-plugin-css-modules"}],
    "types": ["react/next", "react-dom/next"]
  },
  "include": ["packages"],
  "exclude": ["node_modules"]
}
